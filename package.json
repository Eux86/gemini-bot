{
  "name": "gemini-discord-bot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/main.js",
    "remote-create-image": "dotenv -- cross-var docker build -f arm.Dockerfile -t %DOCKER_IMAGE_NAME% .",
    "remote-stop-and-remove-container": "dotenv -- cross-var docker stop %DOCKER_CONTAINER_NAME% || true && docker rm %DOCKER_CONTAINER_NAME% || true",
    "remote-run-container": "dotenv -- cross-var docker run -d --name %DOCKER_CONTAINER_NAME% -e BOT_TOKEN=%BOT_TOKEN% %DOCKER_IMAGE_NAME%",
    "deploy": "dotenv cross-var echo Deploying to:%DOCKER_HOST% && npm run remote-create-image && npm run remote-stop-and-remove-container && npm run remote-run-container",
    "debug": "npm run build && node --nolazy --inspect-brk=9229 dist/main.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^14.14.31",
    "@types/ws": "^7.4.0",
    "cheerio": "^1.0.0-rc.5",
    "discord.js": "^12.5.1",
    "rcon": "^1.0.3",
    "typescript": "^4.2.2"
  },
  "devDependencies": {
    "cross-var": "^1.1.0",
    "dotenv-cli": "^4.0.0"
  }
}
